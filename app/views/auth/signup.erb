<div id="signup_form">
  <h1>Signup Here!</h1>
  <form class="signup-ajax" action="/signup" method="POST">
    <input type="text" name="user[name]" placeholder="Your Name"><br>
    <input type="password" name="user[password]" placeholder="Your Password"><br>
    <input type="password" name="user[password_confirmation]" placeholder="Confirm Password"><br>
    <input type="submit" value="Create Account">
  </form>
</div>